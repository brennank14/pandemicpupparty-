<div class="container grey lighten-5">
  <h1>Create New User</h1>

  <% if flash[:errors] %>
    <% flash[:errors].each do |error| %>
      <p style="color: red;"><%= error %></p>
    <% end %>
  <% end %>


  <%= form_for @user do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>

    <%= f.label :password %>
    <%= f.password_field :password %>

    <%=f.label :password_confirmation %>
    <%=f.password_field :password_confirmation%>

    <%= f.label :email %>
    <%= f.text_field :email %>

    <%= f.submit %>
  <% end %>
</div>