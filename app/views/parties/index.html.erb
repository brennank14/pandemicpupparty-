<h1>Parties</h1>

        <main class="cards">

            <% @parties.each do |party|%>
                <% park = Park.all.find { |park| park.id == party.park_id }%>
            
                <article class="card z-depth-3">
                    <img src="<%= park.park_img %>">
                    <div class="text">
                        <h3>It's a party at <%= park.name %></h3>
                        <p>On <%= party.date %> at <%= party.time %> </p>
                        <button class="grey lighten-2"><%= link_to 'Party Details', party_path(party) %></button>
                    </div>
                </article>
         
            <% end %>
        </main>