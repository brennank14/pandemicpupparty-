
<div class="container">

    <h1>Party Details</h1>
    <% park = Park.all.find { |park| park.id == @party.park_id }%>
    <h2> at <%= link_to park.name, park_path(park) %></h2>
    <h3> on <%= @party.date %> at <%= @party.time %> </h3>
    <%= button_to 'Join the Party', user_parties_path , method: :post, params: { party_id: @party.id, user_id: @current_user.id } %>
    <% host = User.all.find { |user| user.id == @party.user_id } %>
    <h3> a party started by <%= link_to host.name, user_path(host) %> </h3>

    <% @party.users.each do |user|%>
    <main class="cards">
        <% user.dogs.each do |dog|%>
            <article class="card z-depth-3">
                <img src="<%= dog.picture %>">
                <div class="text">
                    <h3><%= dog.name %></h3>
                    <button class="grey lighten-2"><%= link_to dog.name, dog_path(dog) %></button>
                </div>
            </article>
            <% end %>
        <% end %>
    </main> 
</div>