<h1>Dogs</h1>
   
        <main class="cards container">
            <% @dogs.each do |dog|%>
                <article class="card z-depth-3">
                    <img src="<%= dog.picture %>">
                    <div class="text">
                        <h3>Meet <%= dog.name.capitalize %></h3>
                        <p>Connect with <%= dog.name.capitalize %> and party!</p>
                        <button class="grey lighten-2"><%= link_to dog.name, dog_path(dog) %></button>
                    </div>
                </article>
            <% end %>
        </main>
