<h1>DOGS</h1>

        <main class="cards">

            <% @dogs.each do |dog|%>
                <article class="card z-depth-3">
                    <img src="<%= dog.picture %>">
                    <div class="text">
                        <h3>Meet <%= dog.name %></h3>
                        <p>Connect with <%= dog.name %> and party!</p>
                        <button class="grey lighten-2"><%= link_to dog.name, dog_path(dog) %></button>
                    </div>
                </article>
         
            <% end %>
        </main>