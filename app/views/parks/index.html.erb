
<h1>Parks</h1>
        <main class="cards">

            <% @parks.each do |park|%>            
                <article class="card z-depth-3 ">
                    <img src="<%= park.park_img %>">
                    <div class="text">
                        <h3><%= park.name %> Dog Park</h3>
                            <% if @current_user && @current_user.parks.find { |user_park| user_park.id. == park.id } %>
                                <a class="waves-effect waves-light btn">Favorited</a>
                            <% elsif @current_user %>
                                <a class="waves-effect waves-light btn"><%= button_to 'Add to favorites', favorites_path , method: :post, params: { park_id: park.id, user_id: @current_user.id } %></a>
                             <% else %>
                                <a class="waves-effect waves-light btn"><%= button_to 'Sign up to favorite parks!', new_user_path , method: :get %></a>
                            <% end %>    
                    </div>
                </article>
            <% end %>
        </main>

        